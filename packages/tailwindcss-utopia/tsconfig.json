{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "moduleDetection": "force",

    "moduleResolution": "bundler",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,

    "declaration": true,
    "outDir": "dist"
  }
}
